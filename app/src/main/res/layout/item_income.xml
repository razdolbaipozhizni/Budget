<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Название дохода -->
    <TextView
        android:id="@+id/text_income_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Название"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_income_amount"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:paddingEnd="8dp" />

    <!-- Сумма дохода -->
    <TextView
        android:id="@+id/text_income_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₽"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/text_income_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_income"
        android:paddingEnd="8dp" />

    <!-- Кнопка редактирования -->
    <Button
        android:id="@+id/btn_edit_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Редактировать"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/text_income_amount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_delete_income"
        android:padding="4dp" />

    <!-- Кнопка удаления -->
    <Button
        android:id="@+id/btn_delete_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удалить"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/btn_edit_income"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>