<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Общая сумма доходов -->
    <TextView
        android:id="@+id/text_total_income_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Общая сумма доходов: 0.00 ₽"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Кнопка для добавления доходов -->
    <Button
        android:id="@+id/btn_add_income_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить доход" />

    <!-- Кнопка для добавления расходов -->
    <Button
        android:id="@+id/btn_add_expense_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить расход"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_analysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Анализ"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />
</LinearLayout>
